            // $('#cat_name').css('display', 'block');
            // $('#store_list_container, #store_list_container2').addClass("full_width");
            $.each(coupons, function(i, val){
                if(store_name == val.store_name){
                    $("#"+val.id).show();
                }
                // var cat_array = val.getAttribute('data-cat').split(',');
